import tkinter as tk
from tkinter import *
from tkinter import ttk

start = Tk()
start.title("Climate and Weather Team 20")
start.geometry('500x320')
start.configure(background="darkgrey")

ttk.Label(start, text = "Welcome to Weather + Climate", 
          background = 'black', foreground ="white", 
          font = ("Times New Roman", 15)).grid(row = 2, column = 2) 

def main ():
    main = Tk()
    main.title("Main Menu")
    main.geometry('500x320')
    main.configure(background="green")

#addbutton 
Button(start,text="Click to Start", width=6, command=main) .grid(row=8,column=1,sticky=W)

start.mainloop()
main.mainloop()

